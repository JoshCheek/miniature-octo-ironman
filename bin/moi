at_exit do
  command, *argv = ARGV.dup
  exit commands[command].call env:      ENV,
                              argv:     argv,
                              stdin:    $stdin,
                              stdout:   $stdout,
                              stderr:   $stderr,
                              exit:     Kernel.method(:exit),
                              commands: commands
end
